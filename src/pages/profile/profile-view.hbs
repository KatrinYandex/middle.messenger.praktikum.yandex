<div class="profile-view">
    <div class="profile-view__box">
        <img class="form__photo" src="{{ avatar }}"></img>
        <p class="form__name">{{ name }}</p>
        <div class="form__item-profile">
            <p class="form__item__label">Почта</p>
            <div class="form__item__data">{{ email }}</div>
        </div>
        <div class="form__item-profile">
            <p class="form__item__label">Логин</p>
            <div class="form__item__data">{{ login }}</div>
        </div>
        <div class="form__item-profile">
            <p class="form__item__label">Имя</p>
            <div class="form__item__data">{{ first_name }}</div>
        </div>
        <div class="form__item-profile">
            <p class="form__item__label">Фамилия</p>
            <div class="form__item__data">{{ second_name }}</div>
        </div>
        <div class="form__item-profile">
            <p class="form__item__label">Имя в чате</p>
            <div class="form__item__data">{{ display_name }}</div>
        </div>
        <div class="form__item-profile">
            <p class="form__item__label">Телефон</p>
            <div class="form__item__data">{{ phone }}</div>
        </div>
        {{{ changeDataButton }}}
        {{{ changePasswordButton }}}
        {{{ backButton }}}
        {{{ exitButton }}}
    </div>
</div>
